<%= render 'shared/page_title', title: "Log in" %>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class="form-group">
    <div class="control-label col-md-2 colormatch">
      <%= f.label :email %>
    </div>
    <div class="col-md-8">
      <%= f.text_field :email, class: "form-control", placeholder: "Enter your email" %>
    </div>
  </div>
  <div class="form-group">
  <div class="control-label col-md-2 colormatch">
    <%= f.label :password %>
  </div>
  <div class="col-md-8">
    <%= f.password_field :password, class: "form-control", placeholder: "Enter a password" %>
  </div>
</div>
</div>
  <div class="form-group">
    <div class="col-md-offset-4 col-md-10">
      <%= f.submit "Log In", class:  "btn btn-primary btn-lg btn-xlarge" %>
    </div>
  </div>
<% end %>
<div class="col-md-4 col-md-offset-4 colormatch">
  [ <%= link_to "Cancel request", recipes_path %> ]
</div>
</div>
</div>
