
<%= render 'shared/errors', obj: @chef %>

<div class="row">
  <div class="col-md-12 ">
    <%= form_for(@chef, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2 colormatch">
          <%= f.label :chefname, "Name" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :chefname, class: "form-control", placeholder: "Enter your Name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2 colormatch">
          <%= f.label :email %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>
      <div class="form-group">
      <div class="control-label col-md-2 colormatch">
        <%= f.label :password %>
      </div>
      <div class="col-md-8">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter a password" %>
      </div>
    </div>
    <div class="form-group">
    <div class="control-label col-md-2 colormatch">
      <%= f.label :password_confirmation, "Confirm Password" %>
    </div>
    <div class="col-md-8">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
    </div>
  </div>
  </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit(@chef.new_record? ? "Create Account" : "Confirm Changes",
              class:  "btn btn-primary btn-lg btn-xlarge") %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to "Cancel request", chefs_path %> ]
    </div>
  </div>
</div>
